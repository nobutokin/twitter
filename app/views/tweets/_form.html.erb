<%= form_for(@tweets, url: choose_new_or_edit) do |f| %>
  <% if @tweets.errors.any? %>
    <div id="error_explanation">
      <h2><%= @tweets.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @tweets.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      
  <%= f.label :内容 %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "投稿一覧画面にもどる", tweets_path %>